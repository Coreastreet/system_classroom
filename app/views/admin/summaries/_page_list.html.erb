<div class="flex flex-col flex-nowrap items-end overflow-y-scroll flex-1" id="lesson_pages_list">
    <%= link_to "Problem", admin_lesson_problem_path(lesson), class:"mb-3 w-[15rem] unselected lesson_page_button flex-0 
                            group rounded px-6 py-2 shadow-md flex text-xl font-semibold " %>
    <% lesson_pages.each do |lesson_page| %>
            <%= link_to admin_lesson_page_path(lesson_page), class: "mb-3 w-[15rem] unselected lesson_page_button flex-0 group rounded px-6 py-2 shadow-md flex items-center flex-col h-fit", data: { turbo_frame: "show_lesson" } do %>
                        <div class="w-full flex justify-between items-center">
                            <span class="text-xl font-semibold group-hover:underline flex-1">
                                <%= lesson_page.title.capitalize %>
                            </span>
                        </div>
            <% end %>
    <% end %>
    <div class="mb-3 selected lesson_page_button w-[15rem] flex-0 group rounded px-6 py-2 shadow-md flex text-xl font-semibold">
        Summary
    </div>
</div>
