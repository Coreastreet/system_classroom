<div class="flex flex-row justify-center">
  <div class="mt-10 px-12 sm:px-24 md:px-30 lg:px-12 lg:mt-16 xl:max-w-2xl lg:w-3/5 sm:w-4/5 max-w-lg">
    <h2 class="text-center text-4xl text-indigo-900 font-display font-semibold xl:text-5xl
    xl:text-bold">Log in</h2>
    <div class="mt-12">
        <%= form_with(model: @new_creator, scope: :session, url: admin_login_path,
        html: {id: 'login-form'}, data: {turbo: "false"}) do |f| %>
            <div>
                <div class="font-semibold text-gray-700 tracking-wide text-md">Email Address</div>
                <%= f.text_field :email, class: "w-full text-lg py-2 border-b border-gray-300 focus:outline-none focus:border-indigo-500",
                    placeholder: "justin@gmail.com", type: "" %>
            </div>
            <div class="mt-8">
                <div class="flex justify-between items-center">
                    <div class="font-semibold text-gray-700 tracking-wide text-md">
                        Password
                    </div>
                    <div>
                        <a class="text-sm font-display font-semibold text-indigo-600 hover:text-indigo-800
                        cursor-pointer">
                            Forgot Password?
                        </a>
                    </div>
                </div>
                <%= f.password_field :password, class: "w-full text-lg py-2 
                    border-b border-gray-300 focus:outline-none focus:border-indigo-500",
                    type: "", placeholder: "Enter your password" %>
            </div>
            <div class="mt-10">
                <%= f.submit "Log in", class: "bg-indigo-500 text-gray-100 p-4 w-full rounded-full tracking-wide
                    font-semibold font-display focus:outline-none focus:shadow-outline hover:bg-indigo-600
                    shadow-lg" %>
            </div>
        <% end %>
        <div class="mt-12 text-sm font-display font-semibold text-gray-700 text-center">
            Don't have an account ? <a class="cursor-pointer text-indigo-600 hover:text-indigo-800">Sign up</a>
        </div>
    </div>
  </div>
</div>